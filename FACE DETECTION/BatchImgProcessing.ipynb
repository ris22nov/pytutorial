    "import cv2\n",
    "import glob"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 6,
   "metadata": {},
   "outputs": [],
   "source": [
    "images = glob.glob('*.jpg')"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "metadata": {},
   "outputs": [],
   "source": [
    "for image in images:\n",
    "    img = cv2.imread(image,0)\n",
    "    re_img = cv2.resize(img,(int(img.shape[1]/2),int(img.shape[0]/2)))\n",
    "    cv2.imwrite(\"resized_\"+image,re_img)"
   ]
  },
